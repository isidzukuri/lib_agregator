  </head>
  <body>
<!-- navbar-default -->
    <div class="navbar navbar-default navbar-fixed-top top_menu">
      <div class="container">

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
