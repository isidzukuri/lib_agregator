<div class="panel panel-primary"> 
    <div class="panel-heading"> 
        <h3 class="panel-title">Lists</h3> 
    </div> 
    <div class="panel-body"> 

    <table class="table table-hover"> 
        <thead> 
            <tr> 
                <th>#</th> 
                <th>Text</th> 
                <th>actions</th> 
            </tr> 
        </thead> 
        <tbody> 
            <% @items.each do |item| %>
            <tr> 
                <th scope="row"><%= item.id %></th> 
                <td><%= item.text %></td> 
                <td>
                    <a href="/admin/quotes/<%= item.id %>/edit" class="btn btn-primary btn-xs">edit</a>
                    <%= link_to 'Destroy',  "/admin/quotes/#{item.id}",  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                </td> 
            </tr> 
            <% end %>
        </tbody> 
    </table>

    <%= render partial: "layouts/paginator" %>
    
    </div> 
</div>
