<div class="clearfix"></div>



<div class="container">
    <div class="row book_search_form">
          <h2>розширений пошук книг</h2>
            <form action="<%= extended_search_path(id: :results) %>" method="get">

        <div class="row ">
            <div class="col-xs-6 col-sm-4">
                <h4>Жанри</h4>
                <div class="input-group">
                    <% @genres.each do |genre|%>
                    <input type="checkbox" name="genre[]" checked value="<%=genre.id%>"> <%=genre.title%><br>
                    <% end %>
                </div>
            </div>
              

            <div class="col-xs-6 col-sm-4">
                <h4>Формати</h4>
                <div class="input-group">
                    <% Book::FORMATS.each do |frmt| %>
                    <input type="checkbox" name="format[]" checked value="<%=frmt%>"> <%=frmt == :paper ? 'папір' : frmt.upcase %><br>
                    <% end %>
                </div>
            </div>
              
        </div>
        <br/>
        <div class="row">

            <div class="col-lg-6">
        
              <div class="input-group">
                <input name="word" value="" required type="text" class="form-control" placeholder="введіть назву книги">
                <span class="input-group-btn">
                  <input type="submit" value="Шукати" class="btn btn-default search_btn" type="button">
                </span>
              </div>
          
        </div>

      </div>
      </form>
    </div>

</div>