<div class="row">
  <% @paper_books.each do |book|%>
  <a href="/books/<%= book.seo %>" class="col-md-4 col-xs-6 book_panel_link">
    <img src="<%= book.thumb %>" alt="<%= book.title %>" title="<%= book.title %>" />
    <!-- <%= book.title %> -->
  </a>
  <% end %>
  
  <% @free_books.each do |book|%>
  <a href="/books/<%= book.seo %>" class="col-md-4 col-xs-6 book_panel_link">
    <img src="<%= book.thumb %>" alt="<%= book.title %>" title="<%= book.title %>" />
    <!-- <%= book.title %> -->
  </a>
  <% end %>

</div>


<% if @lists.present? %>
<div class="row">
  <h2 class="section_title">Списки книг:</h2>
  <%= render partial: "bibliotheca/lists/item", collection: @lists, as: :list  %>
</div> 
<% end %>

<% if @articles.present? %>
<div class="row">
  <h2 class="section_title">Статті:</h2>
  <%= render partial: "bibliotheca/articles/item", collection: @articles, as: :item  %>
</div> 
<% end %>
